                <!-- Indicators (dots) -->
                <div class="carousel-indicators mt-3">
                    <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="0"
                        class="active"></button>
                    <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="2"></button>
                </div>

            </div>
        </section>

        <div class="row g-5">
            <div class="col-md-12">
                <div class="container">
            
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <a href="#" class="text-success small text-decoration-none">View all blogs</a>
                            <h2 class="fw-bold mt-2">Recent Articles</h2>
                            <p class="text-secondary mb-0">
                                Stay updated with budgeting, investing, debt payoff and money tips that help you
                                build wealth.
                            </p>
                        </div>
                    </div>


                    <div class="row g-4">
                        <div class="row g-4">
                            <% if (locals.blogPosts) { %>
                                <% blogPosts.forEach(post=> { %>
                                    <div class="col-md-4">
                                        <a href="/article/<%= post.id %>" class="text-decoration-none">
                                        <div class="card bg-black border-0 h-100 shadow-sm article">
                                            <img src="../static/images/article.jpg" class="card-img-top" alt="blog image">
                                            <div class="card-body">
                                                <span class="badge bg-success mb-2">
                                                    <%= post.section %>
                                                </span>
                                                <span class="badge bg-primary mb-2">
                                                    <%= post.category %>
                                                </span>

                                                <p class="text-secondary small mb-1">
                                                    <%= post.date %>
                                                </p>
                                                <h5 class="card-title text-light fw-bold">
                                                    <%= post.title %>
                                                </h5>
                                                <p class="card-text text-secondary">
                                                    <%= post.message %>
                                                </p>
                                            </div>
                                        </div>
                                        </a>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <h6 class="mb-0 fw-bold fst-italic text-light">No recent posts</h6>
                                            <% } %>
                        </div>

                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div>
                            <span class="text-secondary me-2">●</span>
                            <span class="text-secondary me-2">●</span>
                            <span class="text-secondary">●</span>
                        </div>
                        <div>
                            <button class="btn btn-outline-light btn-sm me-2">←</button>
                            <button class="btn btn-outline-light btn-sm">→</button>
                        </div>
                    </div>

                </div>
                </section>


                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

                <section class="py-5 bg-black text-light">
                    <div class="container">
                        <h2 class="text-center mb-3 fw-bold">Frequently Asked Questions</h2>
                        <p class="text-center text-secondary mb-4">
                            Get clear answers to common personal finance questions and build confidence with your money.
                        </p>

                        <div class="accordion" id="financeFAQ">
                                <% if (locals.faqs) { %>
                                <% faqs.forEach(faq=> { const collapseId = `faq${faq.index}`; %>
                            <div class="accordion-item bg-black border-secondary">
                                <h2 class="accordion-header">
                                    <button
                                        class="accordion-button bg-black text-light collapsed d-flex justify-content-between align-items-center"
                                        type="button" data-bs-toggle="collapse" data-bs-target="#<%= collapseId %>">
                                        <span><%= faq.question %></span>
                                        <i class="fa-solid fa-chevron-down rotate-icon ms-2"></i>
                                    </button>
                                </h2>
                                <div id="<%= collapseId %>" class="accordion-collapse collapse" data-bs-parent="#financeFAQ">
                                    <div class="accordion-body text-secondary">
                                        <%= faq.answer %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                        <% } %>
                        </div>
                    </div>
                </section>

            </div>
        </div>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const reveals = document.querySelectorAll(".reveal-up");

                const observer = new IntersectionObserver(entries => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add("show");
                            observer.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.2 });

                reveals.forEach(el => observer.observe(el));
            });

        </script>

        <%- include ('partials/footer') %>